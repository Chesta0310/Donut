<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/events"
        android:text="Events"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="#5314C5"
        android:background="#A8D9DF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

    </TextView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="696dp"
            android:layout_below="@+id/sl_ogon"
            android:layout_marginTop="30dp"

            android:gravity="left"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/img1"
        android:src="@drawable/challenger"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        >

    </ImageView>


    <Button
        android:id="@+id/more_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get More Details"
        >

    </Button>
    <Button
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feedback"
        >

    </Button>
    <Button
        android:id="@+id/event_descriptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Descriptions"
        >

    </Button>
    <Button
        android:id="@+id/layout_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Layout Map"
        >
    </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>